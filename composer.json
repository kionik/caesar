{
    "name": "kionik/caesar",
    "description": "Asynchronous string, file and xml readers based on ReactPHP",
    "keywords": ["ReactPHP", "asynchronous", "async", "fast", "file", "xml", "string", "reader", "parser"],
    "authors": [
        {
            "name": "Yuriy Korytko",
            "email": "yuriy.korytko@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "ext-SimpleXML": "*",
        "ext-libxml": "*",
        "ext-dom": "*",
        "react/stream": "^1.1.0",
        "php-ds/php-ds": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "mockery/mockery": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Kionik\\Caesar\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kionik\\Tests\\Caesar\\": "tests/"
        }
    }
}
